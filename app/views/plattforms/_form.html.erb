<%= form_for @plattform do |f| %>

<div class="form-group row">
	<%= f.label :name, class: "col-sm-2 col-form-label" %>
<div class="col-sm-10">
	<%= f.text_field :name, class: 'form-control'%>
	</div>
</div>

<div class="form-group row">
	<%= f.label :image, class: "col-sm-2 col-form-label" %>
<div class="col-sm-10">
	<%= f.file_field :image, class: 'form-control'%>
	</div>
</div>


<div class="form-group row">
	<%= f.label :description, class: "col-sm-2 col-form-label" %>
<div class="col-sm-10">
	<%= f.text_area :description, class: 'form-control' %>
	</div>
</div>

<div class="form-group row">
	<%= f.label :owner, class: "col-sm-2 col-form-label" %>
<div class="col-sm-10">
	<%= f.text_field :owner, class: 'form-control' %>
	</div>
</div>

<div class="form-group row">
	<%= f.label :account, class: "col-sm-2 col-form-label" %>
<div class="col-sm-10">
	<%= f.text_field :account, class: 'form-control' %>
	</div>
</div>

<div class="form-group row">
	<%= f.label :account_date_start, class: "col-sm-2 col-form-label" %>
<div class="col-sm-10">
	<%= f.text_field :account_date_start, class: 'form-control' %>
	</div>
</div>

<div class="form-group row">
	<%= f.label :cost, class: "col-sm-2 col-form-label" %>
<div class="col-sm-10">
	<%= f.text_field :price, class: 'form-control' %>
	</div>
</div>

<div class="form-group row">
	<%= f.label :tags, class: "col-sm-2 col-form-label" %>
<div class="col-sm-10">
	<%= f.text_field :all_tags, class: 'form-control' %>
	</div>
</div>

<%= f.submit 'Submit', class: 'btn btn-primary' %>
<%= link_to 'Cancel', plattforms_path, class: 'btn btn-default' %>
<% end %>